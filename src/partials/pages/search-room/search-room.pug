              { text: "Завтрак",
                isChecked: false
              },
              { text: "Письменный стол",
                isChecked: true
              },
              { text: "Стул для кормления",
                isChecked: true
              },
              { text: "Кроватка",
                isChecked: true
              },
              { text: "Телевизор",
                isChecked: false
              },
              { text: "Шампунь",
                isChecked: false
              },
            ]
          +expandable-checkbox-list("дополнительные удобства", additionalAmenities, false)
