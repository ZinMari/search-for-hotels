include ../number-and-cost/number-and-cost
include ../rate-button/rate-button


mixin room-card({images, info, starValue, reviews})
  .room-card
    .room-card__slider
      .glide.js-glide
        .glide__track(data-glide-el="track")
          ul.glide__slides
            each img in images
              li.glide__slide
                img(src= img, alt="Изображение номера отеля")
        .glide__arrows(data-glide-el="controls")
          button.glide__arrow.glide__arrow_direction_left(data-glide-dir="<")
            svg(width="8"
                height="13"
                viewBox="0 0 8 13"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              )
              path(d="M7.42188 11.0928L6.01563 12.499L0.0156253 6.49902L6.01563 0.499024L7.42188 1.90527L2.82813 6.49902L7.42188 11.0928Z" fill="white")

          button.glide__arrow.glide__arrow_direction_right(data-glide-dir=">")
            svg(width="8"
                  height="13"
                  viewBox="0 0 8 13"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                )
                path(d="M7.42188 11.0928L6.01563 12.499L0.0156253 6.49902L6.01563 0.499024L7.42188 1.90527L2.82813 6.49902L7.42188 11.0928Z" fill="white")

        .glide__bullets(data-glide-el="controls[nav]")
          - let index = 0;
          while index < images.length
            button.glide__bullet(data-glide-dir=`=${index++}`)

    .room-card__info
      .room-card__number-and-cost
        +number-and-cost(info)
      .room-card__rating
        .room-card__stars
          +rate-button(starValue)
        .room-card__reviews
          span= reviews
          | Отзывов
