include ../date-dropdown/date-dropdown
include ../text-field/text-field
include ../button/button

mixin login
  .login
    h2.login__title Войти
    form.login__form(action="search-room.html")
      .login__inputs
        -
          const inputsData = [
            {
              id: "loginEmail",
              typeInput: "email",
              placeholder: "Email",
            },
            {
              id: "loginPassword",
              typeInput: "password",
              placeholder: "Пароль",
            }
          ]
          
        each element in inputsData
          .login__input
            +text-field(element)

      .login__form-btn
        +button({text: "войти", style: "arrow"})

    .login__create
      span.login__text Нет аккаунта на Toxin?
      .login__create-btn
        +button({text: "создать", style: "border"})
