include ../date-dropdown/date-dropdown
include ../dropdown/dropdown
include ../button/button

mixin find-rooms({linkForm="empty-link"})
  form.find-rooms(action="search-room.html")
    .find-rooms__wrap
      h2.find-rooms__title Найдём номера под ваши пожелания

      .find-rooms__date
        - const dateDropdown = {titleStart: "прибытие", titleEnd: "выезд", identifier: "calendar_start"}
        +date-dropdown(dateDropdown)

      .find-rooms__guests
        -
          const dropdownItem = {
            title: "гости",
            buttonText: "Сколько гостей",
            isOpen: false,
            hasButtons: true
          }

        +dropdown(dropdownItem)

      .find-rooms__btn
        +button({text: "подобрать номер", style: "arrow"})
