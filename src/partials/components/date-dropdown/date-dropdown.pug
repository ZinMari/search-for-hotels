include ../datepicker/datepicker

mixin date-dropdown({titleStart, titleEnd, identifier, type, dateEndText="ДД.ММ.ГГГГ"})
  .date-dropdown
    +datepicker({identifier, typeCalendar: "dropdown"})
    label.date-dropdown__title(for="dateDropdownBtnStart")= titleStart
    label.date-dropdown__title(for="dateDropdownBtnEnd")= titleEnd
    button.date-dropdown__btn(id="dateDropdownBtnStart" data-value="start" data-identifier= identifier)
      span.date-dropdown__text ДД.ММ.ГГГГ
      svg.date-dropdown__arrow(
        width="12"
        height="8"
        viewBox="0 0 12 8"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      )
        path(d="M10.5938 0.578125L12 1.98438L6 7.98438L0 1.98438L1.40625 0.578125L6 5.17188L10.5938 0.578125Z" fill="#1F2041" fill-opacity="0.5")
    button.date-dropdown__btn(id="dateDropdownBtnEnd" data-value="end" data-identifier= identifier)
      span.date-dropdown__text= dateEndText
      svg.date-dropdown__arrow(
        width="12"
        height="8"
        viewBox="0 0 12 8"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      )
        path(d="M10.5938 0.578125L12 1.98438L6 7.98438L0 1.98438L1.40625 0.578125L6 5.17188L10.5938 0.578125Z" fill="#1F2041" fill-opacity="0.5")

